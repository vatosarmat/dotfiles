[tag]
  sort = -version:refname

[merge]
  tool = nvim
  conflictStyle = diff3

[mergetool]
  keepBackup = false

[mergetool "nvim"]
  cmd = nvim -d $MERGED $LOCAL $BASE $REMOTE -c 'wincmd J'
  trustExitCode = false

[diff]
  tool = nvim
  algorithm = patience
  indentHeuristic = true

[difftool]
  keepBackup = false

[difftool "nvim"]
  cmd = nvim -d $LOCAL $REMOTE

[alias]
  c = checkout
  full-clean = clean -xfd
  shc = clone --depth=1024 --recursive --shallow-submodules
  ba = branch -avv
  fap = fetch --all --prune
  lg = log --oneline --decorate --graph --all
  pum = push -u origin/master
  pulr = pull --rebase
  s = status --short
  si = status --ignored
  smu = submodule update --init --recursive
  ss = status
  tl = tag -l
  w = worktree
