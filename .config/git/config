[tag]
  sort = -version:refname

[merge]
  tool = nvim
  conflictStyle = diff3

[mergetool]
  keepBackup = false

[mergetool "nvim"]
  cmd = nvim -d $MERGED $LOCAL $BASE $REMOTE -c 'wincmd J'
  trustExitCode = false

[diff]
  tool = nvim
  algorithm = patience
  indentHeuristic = true

[difftool]
  keepBackup = false

[difftool "nvim"]
  cmd = nvim -d $LOCAL $REMOTE

[alias]
  bc = checkout -b
  bl = branch -avv
  c = checkout
  fap = fetch --all --prune
  clean-untracked = clean -fd
  lg = log --oneline --decorate --graph --all
  pulr = pull --rebase
  pum = push -u origin/master
  rl = remote -v
  s = status --short
  shc = clone --depth=1024 --recursive --shallow-submodules
  si = status --ignored
  smu = submodule update --init --recursive
  ss = status
  tl = tag -l --sort=-creatordate --format='%(creatordate:short):  %(refname:short)'
  w = worktree
