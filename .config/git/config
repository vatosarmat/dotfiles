[tag]
  sort = -version:refname

[merge]
  tool = nvim
  conflictStyle = diff3

[mergetool]
  keepBackup = false

[mergetool "nvim"]
  cmd = nvim -d $MERGED $LOCAL $BASE $REMOTE -c 'wincmd J'
  trustExitCode = false

[diff]
  tool = nvim
  algorithm = patience
  indentHeuristic = true

[difftool]
  keepBackup = false

[difftool "nvim"]
  cmd = nvim -d $LOCAL $REMOTE

[alias]
  # generic single-char
  b = branch
  c = checkout
  s = status
  # intensively used
  lg = log --oneline --decorate --graph --all
  bl = branch -avv
  # task workflow
  ct = "!git checkout -b \"$TASK_ID_PREFIX-$1\"; #"
  pt = "!git push --set-upstream origin \"$(git branch --show-current)\""
  # more like redundant
  fap = fetch --all --prune
  clean-untracked = clean -fd
  pulr = pull --rebase
  pum = push -u origin/master
  rl = remote -v
  ss = status --short
  shc = clone --depth=1024 --recursive --shallow-submodules
  si = status --ignored
  smu = submodule update --init --recursive
  tl = tag -l --sort=-creatordate --format='%(creatordate:short):  %(refname:short)'

[init]
	defaultBranch = main
